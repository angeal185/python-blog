<!DOCTYPE html>
<html class="no-js" lang="{{=T.accepted_language or 'en'}}">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge{{=not request.is_local and ',chrome=1' or ''}}">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{{=response.title or request.application}}</title>
    <meta name="application-name" content="{{=request.application}}">
    <link href="{{=URL('static','css/bootstrap.min.css')}}" rel="stylesheet" type="text/css"/>
    <link href="{{=URL('static','css/styles.css')}}" rel="stylesheet" type="text/css" />
	<link href="{{=URL('static','css/layout.css')}}" rel="stylesheet" type="text/css" />

{{block head}}
{{include 'web2py_ajax.html'}}
{{end}}
</head>
<body class="enable-animation">
{{include 'slide-top.html'}}
<div id="wrapper">
{{block header}}

{{include 'nav.html'}}
{{end}}

{{block center}}
{{include}}
{{end center}}

{{block footer}}
{{include 'footer.html'}}
</div>
{{=response.toolbar()}}
{{include 'bottom.html'}}
{{end footer}}
<script type="text/javascript">var plugin_path = 'js';</script>
<script src="http://netdna.bootstrapcdn.com/bootstrap/3.3.5/js/bootstrap.js"></script> 
<script src="{{=URL('static','js/web2py-bootstrap3.js')}}"></script>
<script src="{{=URL('static','js/scripts.js')}}"></script>
{{block page_js}}
{{end page_js}}
<script>
jQuery("#slidetop a.slidetop-toggle").on("click", function() {
    jQuery("#slidetop .container").slideToggle(150, function() {

        if(jQuery("#slidetop .container").is(":hidden")) {
            jQuery("#slidetop").removeClass('active');
        } else {
            jQuery("#slidetop").addClass('active');
        }

    });
});
  </script>
</body>
</html>
