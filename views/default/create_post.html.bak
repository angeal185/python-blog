{{extend 'layout.html'}}

<form action="#" class="form-horizontal" enctype="multipart/form-data" method="post">
    <div class="form-group" id="blog_title__row">
        <label class="control-label col-sm-3" for="blog_title" id="blog_title__label">Title</label>
        <div class="col-sm-9">
            <input class="form-control string" id="blog_title" name="title" type="text" value="">
            <span class="help-block"></span>
        </div>
    </div>
    <div class="form-group" id="blog_body__row">
        <label class="control-label col-sm-3" for="blog_body" id="blog_body__label">Body</label>
        <div class="col-sm-9">
            <textarea class="text form-control" cols="40" id="blog_body" name="body" rows="10"></textarea>
            <span class="help-block"></span>
        </div>
    </div>
    <div class="form-group" id="blog_images__row">
        <label class="control-label col-sm-3" for="blog_images" id="blog_images__label">Images</label>
        <div class="col-sm-9"><input class="upload input-file" id="blog_images" name="images" type="file">
            <span class="help-block"></span>
        </div>
    </div>
    <div class="form-group" id="submit_record__row">
        <div class="col-sm-9 col-sm-offset-3">
            <input class="btn btn-primary btn-default" type="submit" value="Submit">
        </div>
    </div>
    <div style="display:none;"><input name="_formkey" type="hidden" value="1ca545d4-490f-4671-8fc1-3ff20f744a5a">
        <input name="_formname" type="hidden" value="blog/create">
    </div>
</form>
